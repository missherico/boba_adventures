<div class='col-xs-12 text-center'>

<h2>Edit Adventure!</h2>

<%= form_for(:adventure, method: :patch, url: show_adventure_path) do |f| %>
  <%= f.text_field :name, :autofocus => true, placeholder: "the adventure!" %>
  <br>
  <%= f.text_field :description, placeholder: "describe it" %>
  <br>
  <%= f.text_field :city, placeholder: "city" %>
  <br>
  <%= f.text_field :state, placeholder: "state" %>
  <br>
  <%= f.text_field :cross_st1, placeholder: "cross street 1" %>
  <br>
  <%= f.text_field :cross_st2, placeholder: "cross street 2" %>
  <br>
  <%= f.text_field :address, placeholder: "address" %>
  <br>
  <%= f.submit class: "btn btn-primary" %>
<% end %>

<%= @result%>

</div>
<br />