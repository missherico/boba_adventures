<h3> RESULTS </h3>

<h4> THERE ARE <%= @boba_locations.length %> locations.  Let's sort further</h4>



<table>
  <% @boba_locations.each do |boba_locations| %>
  <tr>
  	<td>
      <%= boba_locations['id'] %>
  	</td>
  	<td>
      <a href="/my_boba/<%= boba_locations.id%>"><%= boba_locations['name'] %></a>
  	</td>
  	<td>
      <%= boba_locations['location']['neighborhoods'] %>
  	</td>
  	<td>
      <%= boba_locations['is_closed'] %>
  	</td>
  </tr>
<% end %>


</table>